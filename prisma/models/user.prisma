model User {
  id        String         @id @default(uuid())
  email     String         @unique
  password  String
  name      String
  role      UserRole       @default(USER)
  journals  JournalEntry[]
  sessions  Session[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  lastLoginDate          DateTime? // Track last login time
  lastPasswordChangeDate DateTime? // Track last password change time
}